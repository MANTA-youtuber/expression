<div class="topic-hero-wrapper text-center">
  <div class="container top-hero-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>コミュニティの作成</h2>
        <%= form_for @group do |f| %>
        <%= f.label :グループ名, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :説明, class: "control-label" %>
        <%= f.text_area :description, class: "form-control" %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.fields_for :group_users, @group.group_users.build do |af| %>
        <%= af.hidden_field :user_id, value: current_user.id %>
        <%= af.hidden_field :group_id, value: @group.id %>
        <% end %>
        <%= f.submit "グループ作成", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
