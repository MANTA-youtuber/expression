<div class="topic-hero-wrapper text-center">
  <div class="container top-hero-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>コミュニティの編集</h2>
        <%= form_for @group do |f| %>
        <%= f.label :グループ名, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :説明, class: "control-label" %>
        <%= f.text_area :description, class: "form-control" %>
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
