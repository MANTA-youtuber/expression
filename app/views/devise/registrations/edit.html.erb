<div class="topic-index-wrapper text-center">
  <div class="edit-container container">
    <div class="row">
      <h1>ユーザー情報変更 </h1>
      <div class="edit-user">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group col-md-6">
            <%=f.label :"ユーザー画像" %>
            <%= f.file_field :image %>
          </div>
          <div class="col-md-6">

          <div class="form-group">
           <%= f.label :ユーザーネーム %><br />
           <%= f.text_field :name, class: 'form-control', autofocus: true %>
         </div>

          <div class="form-group">
           <%= f.label :"プロフィール(125文字まで)" %><br />
           <%= f.text_area :profile, class: 'form-control', autofocus: true %>
         </div>

          <div class="">
            <%= f.label :age, '年齢', class:'control-label', autofocus: true %>
            <%= f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"] ], {},   class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :live, '住んでいる場所(15文字まで)' %>
            <%= f.text_field :address, class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"%>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :新しいパスワード %> <i>(変更したくない場合は空白のままにしてください。)</i><br />
            <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
            <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> 文字以上</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :パスワードの再確認 %><br />
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"%>
          </div>

        </div>
          <div class="form-group col-md-6 col-md-offset-3">
            <%= f.label :現在のパスワード %> <i>(変更を確認するために現在のパスワードが必要です)</i><br />
            <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
          </div>

          <div class="actions col-md-6 col-md-offset-3">
            <%= f.submit "変更を保存" %>
          </div>
        <% end %>

        <div class="col-md-6 col-md-offset-3">

          <h3>アカウントの削除</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

          <%= link_to "Back", :back %>
        </div>


      </div>
    </div>
  </div>
</div>
