<div class="top-hero-wrapper" >
  <div class="top-hero-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <%= form_for @topic do |f| %>
          <div class="form-group text-center">
            <%= f.label :ツイートする %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group text-center">
            <%= f.label :画像を追加 %>
            </div>

            <div class="form-group text-center col-md-4 col-md-offset-4">
            <%= f.file_field :image%>
          </div>
          

          <div class="form-group text-center col-md-4 col-md-offset-4 btn-lg">
          <%= f.submit '投稿', class: 'btn btn-info ' %>
          </div>


        <% end %>
      </div>
    </div>
  </div>
</div>
