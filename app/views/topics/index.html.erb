<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author inline-block">
              <p>
                <%= topic.user.name %>
              </p>
              <p>
                <%= l topic.created_at, format: :short %>
              </p>
            </h2>

            <div class="topic-conte">
              <p class="topic-text"><!-- 本文 --><%= topic.description %></p>
                <!--画像 (※ある場合のみ) -->
              <% if topic.image.present? %>
                <%= image_tag topic.image.url %>
              <% end %>

              <div class="icon-list fa-2x">
                <!-- いいねボタン -->
                <% if topic.liked_users.include?(current_user) %>
                  <%= link_to likes_path(topic_id: topic.id), method: :delete do %>
                  <i class="fas fa-heart"></i>
                <% end %>
                <% else %>
                <%= link_to likes_path(topic_id: topic.id), method: :post do %>
                  <i class="far fa-heart"></i>
                <% end %>
                <% end %>

                <%= topic.likes.count  %>

                <!-- コメント -->
                <%= link_to "/topics/#{topic.id}" do %>
                  <i class="far fa-comment"></i>
                <% end %>
                <%= topic.comments.count %>
              </div>


              <%= link_to '削除', topic, method: :delete, data: {confirm: '削除してよろしいですか？'} %>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
